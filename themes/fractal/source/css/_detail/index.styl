.fade
    opacity: 0
    visibility: hidden
    &.in
        opacity: 1
        visibility: visible
        transition: opacity 0.35s
    &.out
        opacity: 0
        visibility: hidden
        transition: visibility 0s 0.35s, opacity 0.35s
