  &-download
    background-image: linear-gradient(90deg, #00AEFF 0%, #3369E7 100%);
    box-shadow: 0 2px 6px 0 rgba(51,105,231,0.4);
    &:hover
      box-shadow:0 4px 12px 0 rgba(51,105,231,0.4);